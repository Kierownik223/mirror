# File extensions to show the details page for
extensions = ["exe", "cab", "appx", "xap", "appxbundle", "zip", "7z", "apk", "rar"]
# File and directory names that will be hidden on any directory listing
hidden_files = ["static", "uploads", "private", "robots.txt", "favicon.ico", "top", "RESTRICTED", "metadata", "HIDDEN"]
# Enable login functionality (disable to run with no database)
enable_login = true
# Enable /api
enable_api = true
# Enable MARMAK link in the header
enable_marmak_link = true
# Enable /direct (requires public/private.key)
enable_direct = false
# Instance info to show in footer, leave empty to hide
instance_info = "My Mirror instance!"
# X-Send-File header to handle file serving
x_sendfile_header = "X-Send-File"
# X-Send-File header path prefix (needed for Apache2 configuration)
x_sendfile_prefix = "/opt/mirror/"
# Standalone mode (for use without a reverse proxy)
standalone = false
# Fallback root domain (when using custom DNS or hosting on a root domain)
fallback_root_domain = "marmak.net.pl"
# Enable file database (download files by ID, download counting)
enable_file_db = true