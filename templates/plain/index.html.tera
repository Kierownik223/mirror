{% extends "plain/base" %}

{% block content %}
<span><a href="/">MARMAK Mirror</a></span>{{ macros::breadcrumbs_folder(path=path) }}
{% if admin and path != "/" or private %}
&nbsp;
<a href="/upload?path={{ path }}">{{ strings.uploader }}</a>
{% endif %}
<hr>
{% if path != "/" %}
<a href="../">../</a><br>
{% endif %}
{% for s in dirs %}
<a href="{{ s.name | urlencode }}/">{{ s.name }}/</a><br>
{% endfor %}
{% for s in files %}
<a href="{{ s.name | urlencode }}">{{ s.name }}</a><br>
{% endfor %}
{% if markdown != "" %}
<hr>
README.md<br>
{{ markdown }}
{% endif %}
{% endblock content %}
